<% if @project_identifier %>

<div class="contextual">
<%= link_to('Add Periodic Task',
                          {:controller => 'periodictask', :action => 'new', :project_id => @project},
                          :class => 'icon icon-add') %>
</div>

<h2><%= l(:title_periodic_task_list) %></h2>
<p><%= l(:description_periodic_task_list) %></p>
<table class="list">
  <thead>
    <tr>
      <th><%= l(:label_subject) %></th><th><%= l(:label_assigned_to) %></th><th><%= l(:label_next_run_date) %></th><th>&nbsp</th><th>&nbsp</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |a| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td align="center"><%= a.subject %></td>
      <td align="center"><%=h(a.assigned_to.name) if a.assigned_to %></td>
      <td align="center"><%= a.next_run_date.to_date %></td>
      <td align="right">
  <%= link_to l(:button_edit), 
                            {:controller => 'periodictask', :action => 'edit', :id => a.id, :project_id => @project},
                            :class => 'icon icon-edit',
                            :accesskey => accesskey(:edit),
                            :onclick => 'Element.show("edit-task"); return false;' %>
      </td>
      <td align="left">
  <%= link_to l(:button_delete), {:controller => 'periodictask', :action => 'destroy', :id => a.id, :project_id => @project}, :confirm => l(:text_are_you_sure), :method => :post, :class => 'icon icon-del' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<% else %>
  <p>No project ID supplied</p>
<% end %>
